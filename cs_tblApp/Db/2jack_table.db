  field(SDIS, "$(P)$(Q)m1.PACT  NPP NMS")
  field(OUT, "$(P)$(Q)m1.VAL  PP MS")
}

record(ao, "$(P)$(Q)m1") {
  field(OUT, "$(P)$(Q)t1.B  PP MS")
  field(PREC, "3")
