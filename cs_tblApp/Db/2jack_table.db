}

record(ao, "$(P)$(Q)m2BPut") {
  field(SDIS, "$(P)$(Q)m2.PACT  NPP NMS")
  field(OUT, "$(P)$(Q)m2.VAL  PP MS")
}

record(ao, "$(P)$(Q)m2") {
  field(DTYP, "Soft Channel")
  field(OUT, "$(P)$(Q)t1.A  PP MS")
  field(PREC, "3")
  field(EGU, "mm")
}

record(ao, "$(P)$(Q)linr_tweakVal") {
  field(DOL, "1")
  field(PREC, "3")
